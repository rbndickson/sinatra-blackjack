<div class="well">
  <form action="/bet" method="post">
    <input id="bet-amount" type="text" name="bet"/>
    <br/>
    <input type="submit" class="btn btn-success" value="make bet"/>
  </form>

  <div id="slider"></div>

  <div id="slider_labels">
    <label id="min_label">10</label>
    <label id="max_label"><%= ((session[:players_money]/10)*10) %></label>
  </div>

  <script>
  var players_money= '<%= ((session[:players_money]/10)*10).floor %>';
  $( '#slider' ).slider({
    min: 10,
    max: players_money,
    step: 10,
    slide: function( event, ui ) {
      $("#bet-amount").val(ui.value);
    }
  });
  </script>

</div>
